<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProblemStatement2">

    <TextView
        android:id="@+id/txtSize"
        android:layout_width="269dp"
        android:layout_height="89dp"
        android:layout_marginStart="99dp"
        android:layout_marginTop="230dp"
        android:text="Problem Statement 2"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="33dp"
        android:text="Small"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnMedium"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="149dp"
        android:layout_marginTop="95dp"
        android:layout_marginEnd="150dp"
        android:text="Medium"
        app:layout_constraintEnd_toEndOf="@+id/btnLarge"
        app:layout_constraintStart_toStartOf="@+id/btnSmall"
        app:layout_constraintTop_toBottomOf="@+id/txtSize" />

    <Button
        android:id="@+id/btnLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="54dp"
        android:text="Large"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnMedium"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>